---
import Icon from './Icon.astro';

interface Props {
	title: string;
	tagline?: string;
	link?: string;
	url?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title, url, link } = Astro.props;
---

<div class:list={['hero stack gap-2', align]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		{tagline && <p class="tagline">{tagline} <a href={url} class="company-link">{link}</a></p>}
		<a href="mailto:fcarysnyder@gmail.com?subject=Saw%20your%20website!" class="button">Drop me a line <Icon icon="arrow-right"/></a>
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		width: 100%;
	}

	.title {
		max-width: 37ch;
		font-size: var(--text-2xl);
		color: var(--gray-0);
	}

	.start {
		text-align: start;
	}

	.center {
		text-align: center;
	}

	.center .title,
	.center .tagline {
		margin-inline: auto;
	}

	.tagline {
		display: inline;
		font-size: 1.5rem; /* 24px */
		line-height: 2rem; /* 32px */
		width: 100%;
	}

	.company-link {
		color: var(--accent-regular);
		text-decoration: none;
		transition: color 0.2s ease;
	}
	
	.company-link:hover {
		color: var(--accent-dark);
	}
	.button {
		grid-column-gap: 4px;
    background-color: var(--accent-regular);
    border-radius: 8px;
    justify-content: center;
    align-items: center;
    width: 148px;
    height: 40px;
    font-size: 14px;
    line-height: 20px;
    display: flex;
	border: none;
	color: white;
	text-transform:uppercase;
	font-size: 12px;
	margin-top: 20px;
	text-decoration: none;
	font-weight: 600;
	cursor: pointer;
	}

	.button:hover {
		background-color: var(--accent-dark);
	}

	@media (min-width: 60em) {
		.hero {
			font-size: var(--text-2xl);
		}

		.start {
			text-align: start;
			align-self: center;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-3xl);
		}
	}
</style>
