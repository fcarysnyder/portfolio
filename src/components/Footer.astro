---
import FooterTyper from './FooterTyper';
import FooterSocials from './FooterSocials';

const currentYear = new Date().getFullYear();
const footerText = "Designed & developed in Santa Barbara, California";
const socialDelay = 2000; // Delay for social section to start after footer text

const socialLinks = [
	{ label: "Twitter", url: "https://twitter.com/fcarysnyder" },
	{ label: "LinkedIn", url: "https://linkedin.com/in/fcarysnyder" },
	{ label: "Instagram", url: "https://instagram.com/fcarysnyder" },
	{ label: "Github", url: "https://github.com/fcarysnyder" }
];
---

<footer>
	<div class="group">
		<p class="footer-text">
			<FooterTyper client:visible initialText={footerText} />
		</p>
	</div>
	<div class="socials">
		<FooterSocials client:visible initialText="@fcarysnyder on" links={socialLinks} delay={socialDelay} />
	</div>
</footer>
<style>
	footer {
		display: flex;
		color: var(--gray-400);
		flex-direction: column;
		margin-top: auto;
		padding: 2.5rem 1.5rem; /* Updated horizontal padding to match .wrapper (1.5rem) */
		font-size: var(--text-sm);
		max-width: 83rem; /* Updated max-width to match .wrapper (83rem) */
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		font-family: var(--font-mono);
		gap: 1rem;
	}

	/* Target the links inside the React component */
	footer :global(.social-link) {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
		color: var(--accent-regular) !important;
	}

	footer :global(.social-link:hover), footer :global(.social-link:focus) {
		text-decoration-color: var(--accent-dark);
		color: var(--accent-dark) !important;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-text {
		font-size: var(--text-sm);
		color: var(--gray-400);
		text-transform: uppercase;
		padding: 0px 12px 0px 0px;
		margin: 0;
	}

	.socials {
		display: flex;
		justify-content: flex-start;
		/* column-gap: 0.75rem; -- Handled by React component now */
		flex-wrap: wrap;
		text-transform: uppercase;
	}

	/* Since React component handles layout, we might need fewer styles here but keeping basics */

	@media (min-width: 1024px) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 1.5rem; /* Ensure matching padding on desktop too */
			text-align: left !important;
			gap: 1rem !important;
			
		}

		.group {
			flex-direction: row;
			gap: 2rem !important;
			flex-wrap: wrap;
			margin-bottom: 1rem !important;
		}

		.footer-text {
			padding: 0px 12px 0px 0px;
			text-align: left !important;
		}

		.socials {
			justify-content: flex-end;
		}
	}
</style>
