---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Icon from '../components/Icon.astro';

import { getCollection } from 'astro:content';

// Content Fetching: List five most recent work projects
const projects = (await getCollection('work'))
	.filter((project) => project.data.title === 'Omniscience UI' || project.data.title === 'OpenNode Design System Foundations')
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const title = "Hi, I'm F Cary Snyder";
---

<BaseLayout title={title} useAnimatedBackground={true}>
	<div class="stack full-height-container gap-20 lg:gap-20">
		<div class="hero-wrapper">
			<header class="hero wrapper">
				<img
					alt="Headshot of F Cary Snyder"
					width="480"
					height="620"
					src="/assets/headshot.jpg"
					class="headshot"
				/>
				<Hero align="start" title="Hi, I'm F Cary Snyder">
					<Fragment slot="tagline">
						I'm a Senior UX Designer who codes. Currently designing next-generation industrial control software that improves energy savings at <a href="https://crossnokaye.com" class="company-link">CrossnoKaye</a>. Previously built design systems and satellite constellation C3 interfaces. I love solving complex problems at the intersection of design and engineering.
					</Fragment>
				</Hero>
			</header>
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<div class="header-content">
						<Icon icon='pen-nib' color='var(--icon-color, var(--gray-200))' size="16px"/>
						<h3>Selected Projects</h3>
					</div>
				</header>
				<div class="gallery">
					<Grid >
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>
			</section>
		</main>
	</div>
</BaseLayout>

<style>
	:root {
		--icon-color: var(--gray-200);
	}

	:root.theme-dark {
		--icon-color: var(--gray-200);
	}

	.full-height-container {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.hero-wrapper {
		width: 100%;
		max-width: 100%;
		padding: 0;
		position: relative;
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 1rem;
		width: 100%;
	}

	.hero p {
		font-size: 1.5rem;
		line-height: 2rem;
	}
	
	.roles {
		display: none;
	}

	.hero img.headshot {
		width: 240px;
		height: 320px;
		border-radius: 20px;
		object-fit: cover;
		object-position: top;
	}

	/* Small screen layout - headshot next to title */
	@media (max-width: 59.99em) {
		.hero {
			flex-direction: column;
		}
		
		.hero img.headshot {
			display: none;
		}
		
		.hero > :global(.hero) {
			flex: 1;
			width: 100%;
		}
		
		.hero > :global(.hero .title) {
			display: inline;
			margin: 0;
		}
	}

	@media (min-width: 60em) {
		.hero {
			display: grid;
			grid-template-columns: 1fr 3fr;
			gap: 2rem;
			align-items: center; /* Center vertically */
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.hero img.headshot {
			min-width: 300px;
			width: 300px;
			height: auto;
			max-height: 70vh; /* Limit height to 70% of viewport to prevent scroll */
			aspect-ratio: 3 / 4;
			border-radius: 20px;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-areas: 
			'header'
			'gallery';
		gap: 32px;
		width: 100%;
	}

	.section-header {
		grid-area: header;
		font-size: var(--text-lg);
		width: 100%;
		display: block;
	}

	.header-content {
		display: flex;
		align-items: center;
		gap: 8px;
		padding-bottom: 8px;
		border-bottom: 1px solid;
		border-color: var(--gray-200);
		width: 100%;
	}

	.section-header h3 {
		font-size: var(--text-sm);
		text-transform: uppercase;
		color: var(--gray-200);
		margin: 0;
	}

	.with-cta .section-header {
		justify-self: flex-start;
		text-align: left;
		width: 100%;
	}

	.gallery {
		grid-area: gallery;
	}

	/* ====================================================== */

	@media (min-width: 60em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 32px;
		}

		.section.with-cta {
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
		}
	}

	.section-header.stack {
		display: flex;
		flex-direction: column;
	}
</style>
