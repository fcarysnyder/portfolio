---
import Icon from './Icon.astro';
const currentYear = new Date().getFullYear();
---

<footer>
	<div class="group">
		<p class="footer-text">
			Designed & developed in Santa Barbara, California
		</p>
	</div>
	<div class="socials">
		<p class="socials-label">@fcarysnyder on</p>
		<a href="https://twitter.com/fcarysnyder"> Twitter</a>
		<p>·</p>
		<a href="https://linkedin.com/in/fcarysnyder"> LinkedIn</a>
		<p>·</p>
		<a href="https://instagram.com/fcarysnyder"> Instagram</a>
		<p>·</p>
		<a href="https://github.com/fcarysnyder">Github</a>
	</div>
</footer>
<style>
	footer {
		display: flex;
		color: var(--gray-400);
		flex-direction: column;
		margin-top: auto;
		padding: 3rem 2rem;
		font-size: var(--text-sm);
		max-width: 1280px;
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		font-family: var(--font-mono);
		gap: 1rem;
	}

	footer a {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
		color: var(--accent-regular) !important;
	}

	footer a:hover, footer a:focus {
		text-decoration-color: var(--accent-dark);
		color: var(--accent-dark) !important;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-text {
		font-size: var(--text-sm);
		color: var(--gray-400);
		text-transform: uppercase;
		padding: 0px 12px 0px 0px;
	}

	.socials {
		display: flex;
		justify-content: flex-start;
		column-gap: 0.75rem;
		flex-wrap: wrap;
		text-transform: uppercase;

	}

	.socials-label {
		font-size: var(--text-sm);
		color: var(--gray-400);
		text-transform: uppercase;


	}

	@media (min-width: 1024px) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 2rem;
			text-align: left !important;
			gap: 1rem !important;
			
		}

		.group {
			flex-direction: row;
			gap: 2rem !important;
			flex-wrap: wrap;
			margin-bottom: 1rem !important;
		}

		.socials-label {
			
			padding: 0px 10px 0px 0px;
			text-align: left;
		}

		.footer-text {
			padding: 0px 12px 0px 0px;
			text-align: left !important;
		}

		.socials {
			justify-content: flex-end;
		}
	}
</style>
