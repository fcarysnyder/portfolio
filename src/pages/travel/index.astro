---
import { getCollection } from 'astro:content';
import ArchiveLayout from '../../layouts/ArchiveLayout.astro';

const archiveEntries = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

---

<ArchiveLayout title="Archive">
	<div class="archive-grid">
		{archiveEntries.map((entry) => (
			<article class="archive-card">
				{entry.data.img && (
					<img
						src={entry.data.img}
						alt={entry.data.title}
						width="800"
						height="450"
					/>
				)}
				<h2>{entry.data.title}</h2>
				<time class="date" datetime={entry.data.publishDate.toISOString()}>
					{entry.data.publishDate.toLocaleDateString('en-US', {
						year: 'numeric',
						month: 'long',
						day: 'numeric'
					})}
				</time>
				<p class="description">{entry.data.description}</p>
			</article>
		))}
	</div>
</ArchiveLayout>

<style>
	.archive-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		width: 100%;
	}

	@media (min-width: 768px) {
		.archive-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style> 